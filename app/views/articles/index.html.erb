<div>
  <h1 >My Articles</h1>
  <ul>
    <% @articles.each do |article| %>
      <li>
        <%= link_to article.title, article_path(article) %> &nbsp;&nbsp; <%= link_to article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
        <i class="fa-solid fa-trash" style="color:hsla(0, 100%, 30%, 0.3);" aria-hidden="true"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
  <p><%= link_to 'Add a new article', new_article_path(@new) %></p>
</div>
